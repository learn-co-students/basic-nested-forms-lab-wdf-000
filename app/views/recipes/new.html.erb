Create New Recipe
<br>
<%= form_for @recipe  do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title%>
  <br>
  <%= f.fields_for :ingredients do |i| %>
  <br>
  <%= i.label :quantity%>
  <%= i.text_field :quantity%>
  <%= i.label :name%>
  <%= i.text_field :name%>

<% end %>
<br>
  <%= f.submit %>
<% end %>
