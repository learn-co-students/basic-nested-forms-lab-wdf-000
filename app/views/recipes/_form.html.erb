<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  Ingredients:
    <input name='ingredients[quantity][]' id='recipe_ingredients_attributes_0_quantity'>
    <input name='ingredients[quantity][]' id='recipe_ingredients_attributes_1_quantity'>
