<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %> <br>
  <%= f.fields_for :ingredients do |ingredient| %>
  <%= ingredient.text_field :quantity, id: "recipe_ingredients_attributes_#{ingredient.object.name}_quantity" %>
  <%= ingredient.text_field :name, id: "recipe_ingredients_attributes_#{ingredient.object.name}_name"%> <br>
  <% end %>
  <%= f.submit %>
<% end %>
