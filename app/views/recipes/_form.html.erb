<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br>
  Ingredients:<br>
    <%= f.fields_for :ingredients do |ingr|%>
      <p><%= ingr.label :name %>
      <%= ingr.text_field :name %><br>
      <%= ingr.label :quantity %>
      <%= ingr.text_field :quantity %></p>
    <% end %>

    <%= f.submit %>
<% end %>
